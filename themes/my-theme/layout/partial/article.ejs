<div class="article-wrapper">
    <article class="article" itemscope itemprop="blogPost">
        <header class="article-header">
            <h1 itemprop="name"><%- page.title %></h1>
            <div class="article-meta">
                <div class="article-details">
                    <div class="article-author">
                        <img src="<%- url_for('/img/') %>/<%- post.avatar %>" class="article-avatar" alt="Bartosz Pietrucha">
                        <span class="article-author-name"><%- post.author %></span>
                    </div>
                    <time class="article-date" datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, null) %></time>
                </div>

                <%- partial('partial/post/tags') %>
            </div>
        </header>

        <div class="article-content">
            <%- page.content %>
        </div>

        <footer class="article-footer">
            <%- partial('post/tags') %>
        </footer>

    </article>

    <%- partial('post/share') %>
</div>

<%- partial('post/disqus') %>
